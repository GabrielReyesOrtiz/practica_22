<body>
    <h1 class="text-center">
        <font size="6" , color="#800080">Lista de Materias</font>
    </h1>

    <form class="form-inline my-2 my-lg-0" action="/searchSubject" method="GET">
        <input class="form-control mr-sm-2" type="search" placeholder="Buscar materia" aria-label="Buscar" name="search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
      </form>

    <table class="table table-bordered table-striped">
        <thead class="bg-olive text-white">
            <tr>
                <th class="text-dark">Id de Materia</th>
                <th class="text-dark">Nombre</th>
                <th class="text-dark">Descripci√≥n</th>
                <th class="text-dark">Id de Maestro</th>
                <% if (user && user.userType === 'Administrador') { %>
                <th class="text-dark">Delete</th>
                <th class="text-dark">Update</th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < subjects.length; i++) { %>
            <tr>
                <td><%= subjects[i].idS %></td>
                <td><%= subjects[i].name %></td>
                <td><%= subjects[i].description %></td>
                <td><%= subjects[i].id_teacher %></td>
                <% if (user && user.userType === 'Administrador') { %>
                <td><a href="<%= `deleteSubject/${subjects[i]._id}` %>">Delete</a> </td>
                <td><a href="<%= `findById/${subjects[i]._id}` %>">Update</a> </td>
                <% } %>
            </tr>
            <% } %>
        </tbody>
    </table>
    <div class="text-center">
        <a href="/" class="btn btn-primary btn-lg">Back</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
