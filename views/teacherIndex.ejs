<body>
  <h1 class="text-center">
    <font size="6" , color="#C0C0C0">Lista de Maestros</font>
  </h1>

  <form class="form-inline my-2 my-lg-0" action="/searchTeacher" method="GET">
    <input class="form-control mr-sm-2" type="search" placeholder="Buscar maestro" aria-label="Buscar" name="search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
  </form>

  <table class="table table-bordered table-striped">
    <thead class="bg-purple text-white">
      <tr>
        <th class="text-dark">Id de Maestros</th>
        <th class="text-dark">Nombre</th>
        <th class="text-dark">Correo electr√≥nico</th>
        <th class="text-dark">Id de Carrera</th>
        <% if (user && user.userType === 'Administrador') { %>
        <th class="text-dark">Delete</th>
        <th class="text-dark">Update</th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < teachers.length; i++) { %>
      <tr>
        <td ><%= teachers[i].idT %></td>
        <td><%= teachers[i].name %></td>
        <td><%= teachers[i].email %></td>
        <td><%= teachers[i].id_career %></td>
        <% if (user && user.userType === 'Administrador') { %>
        <td><a href="<%= `deleteTeacher/${teachers[i]._id}` %>">Delete</a> </td>
        <td><a href="<%= `findByIdT/${teachers[i]._id}` %>">Update</a> </td>
        <% } %>
      </tr>
      <% } %>
    </tbody>
  </table>
  <div class="text-center">
    <a href="/" class="btn btn-primary btn-lg">Back</a>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
    integrity="sha384-Sk3oL+EEx5XVJnwo8JKkL5qyO20FmWfZ1zmk6ax+OJxgFl5cD5e/mzo0t0Ej0M6a" crossorigin="anonymous"></script>
</body>

